{
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist/**/*"
    ],
    "compilerOptions": {
        "rootDir": ".",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "mapRoot": "",
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": false,
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "jasmine",
            "node",
            "webpack"
        ]
        // ,
        // "awesomeTypescriptLoaderOptions": {
        //     "forkChecker": true,
        //     "useWebpackText": true
        // }
    }
}