{
    "files": [
        "src/index.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.e2e.ts",
        "dist/**/*"
    ],
    "compilerOptions": {
        "rootDir": ".",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "declaration": false,
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "jasmine",
            "node",
            "webpack"
        ]
        ,
        "awesomeTypescriptLoaderOptions": {
            "forkChecker": true,
            "useWebpackText": true
        }
    }
}